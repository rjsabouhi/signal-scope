modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gitFull", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Tests"

[[workflows.workflow]]
name = "Run Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest tests/ -v"

[workflows.workflow.metadata]
outputType = "console"
